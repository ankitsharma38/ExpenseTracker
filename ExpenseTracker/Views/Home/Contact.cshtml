<style>
    .contact-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        display: flex; /* Use flexbox for alignment */
        align-items: center; /* Align items vertically in the center */
        margin-bottom: 15px; /* Add space between form groups */
    }

        .form-group label {
            flex: 1; /* Make label take up space */
            margin-right: 10px; /* Space between label and input */
        }

    .form-control {
        flex: 2; /* Make input take up more space */
        width: 100%; /* Full width for input fields */
    }

    .text-center {
        text-align: center; /* Center the button */
    }
</style>

<div class="contact-container">
    <h2>@ViewBag.Title</h2>
    <h3 style="text-align:center; font-weight:bold; color:black; text-decoration:underline;">Get in Touch</h3>

    @using (Html.BeginForm("SubmitContact", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Name")
            @Html.TextBox("Name", null, new { @class = "form-control", required = "required" }) <!-- Input field next to label -->
        </div>

        <div class="form-group">
            @Html.Label("Email")
            @Html.TextBox("Email", null, new { @class = "form-control", required = "required", type = "email" }) <!-- Input field next to label -->
        </div>

        <div class="form-group">
            @Html.Label("Message")
            @Html.TextArea("Message", null, new { @class = "form-control", required = "required", rows = 5 }) <!-- Input field next to label -->
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    }
</div>
